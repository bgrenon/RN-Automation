<includeonly><!--

	storing values in Section table

-->{{#cargo_store:
		_table=Section
		|alignment={{{alignment|}}}
		|anchor={{{anchor|}}}
		|sectionHeading={{{sectionHeading|}}}
		|FAQHeading={{{FAQHeading|}}}
		|structuredtext={{#replace:{{{structuredtext|}}}|GlossaryTooltip|GlossaryCargoSafe}}
		|structuredtextwide={{#replace:{{{structuredtextwide|}}}|GlossaryTooltip|GlossaryCargoSafe}}
		|image={{{image|}}}
		|Media={{{Media|}}}
		|Status={{{Status|}}}
		|Issue={{{Issue|}}}
}}<!--

	switch to store values in Video table if media=video

-->{{#switch:
		{{{Media|}}}
	|Video=
		{{#cargo_store:
			_table=Videos
			|Id={{{image|}}}
			|ConcatId={{FULLPAGENAME}}-{{{image|}}}
			|WorkspaceId={{#explode:{{FULLPAGENAME}}|/|0}}
			|Description={{{sectionHeading|}}} 
		}}
	|#default=
}}<!--

		logic for what to print for the section

-->{{#if:
		{{{sectionHeading|}}}
		|<!-- 
	
		show/hide section from published content if tagged

-->{{#switch:
		{{{Status|}}}
		|Yes=
			{{#switch:
				{{NAMESPACENUMBER}}
				|620=
					<div style="margin-top: 40px; padding: 0 10px; opacity: .75; border-left: solid 3px lightgrey;">
					<div style="background-color: lightgrey; padding-left: 15px; margin-bottom: -30px; font-size: 90%; margin: 0 -10px -30px;">
					<i class="glyphicon glyphicon-eye-close" style="margin-right:5px;"></i> 
					<strong>Hidden section</strong>
					</div>
				|0=
					<div style="display:none;">
			}}
	}}<!--

	print section sectionHeading

--><h2>{{{sectionHeading}}}</h2><!--

	include link to Jira issue in RN if tagged and matched

-->{{#if:
		{{{Issue|}}}
		|<!--

	print jira issue if tagged

-->{{#switch:
		{{NAMESPACENUMBER}}
		|0=
		|620=<div style="float:right;font-size:80%"><code>{{{Issue|}}}</code></div><br/>
	}}<!--

	adding section added/modified

--><div style="float:right;font-size:70%">Section added/modifed: <!--

			lightbox to show tagged Jira issue content 

		-->{{#ppin:
				{{#cargo_query:
					tables=
						ArticleCloudRN,
						ComponentRN,
						Component,
						Issue,
						Section
					|join on=
						ArticleCloudRN.ComponentId HOLDS ComponentRN.ComponentId,
						ComponentRN.ComponentId = Component.Id,
						ComponentRN._pageName = Issue._pageName,
						Issue.TicketNumber = Section.Issue
					|format=template
					|template=PrintJiraPopup
					|fields=
						ComponentRN.ReleaseDate=Date,
						Component.Name=Name,
						ArticleCloudRN._pageName=Page,
						ComponentRN.ReleaseNumber=ReleaseNumber,
						Issue.TicketNumber=Ticket
					|named args=yes
					|default=
					|where=
						TicketNumber="{{{Issue|}}}"
						AND Section.Issue = Issue.TicketNumber
						AND Section._pageName="{{FULLPAGENAME}}"
						AND Section._pageNamespace="{{NAMESPACENUMBER}}"
						AND ComponentRN._pageNamespace="{{NAMESPACENUMBER}}"
						AND ArticleCloudRN._pageNamespace="{{NAMESPACENUMBER}}"
				}}
				|{{#cargo_query:
					tables=
						ComponentRN,
						Component,
						Issue,
						Section
					|join on=
						ComponentRN.ComponentId = Component.Id,
						ComponentRN._pageName = Issue._pageName,
						Issue.TicketNumber = Section.Issue
					|fields=DATE_FORMAT(ComponentRN.ReleaseDate,'%M %d, %Y')
					|where=
						TicketNumber="{{{Issue|}}}"
						AND Section.Issue = Issue.TicketNumber
						AND Section._pageName="{{FULLPAGENAME}}"
						AND Section._pageNamespace="{{NAMESPACENUMBER}}"
						AND ComponentRN._pageNamespace="{{NAMESPACENUMBER}}"
				}}
				|50%
				}}
			</div>
|}}
}}
