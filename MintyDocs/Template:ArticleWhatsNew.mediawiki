==Updated articles in the last {{{DiffDays|30}}} days==
{{#cargo_query:
	tables=Article,Hackathon,_pageData
	|join on=Article._pageName=Hackathon.Title, Article._pageName=_pageData._pageName
	|fields=Article._pageName=pageName, Article.DisplayName, Hackathon.Summary, Hackathon.Date, CONCAT('[',Hackathon.Link,' diff]')=Link, Hackathon.UpdatedSections, Hackathon.AddedSections, Hackathon.QAns
	|format=template
	|template=HackathonUpdatedPages
	|named args=yes
	|default=* There were no updates for this manual in the last {{{DiffDays|30}}} days.
    |order by=Hackathon.Date DESC, Article.DisplayName
	|where=
		Article.Manual="{{#explode:{{FULLPAGENAME}}|/|2}}"
		AND Article._pageNamespace="0"
		AND Hackathon.Summary != "false"
		AND DATEDIFF(NOW(),Hackathon.Date) <= {{{DiffDays|30}}}
		AND Hackathon.Summary NOT LIKE "%Typos%"
		AND Hackathon.Type="updated"
}}
